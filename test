#include <iostream>
int main (){
using namespace std;
    int x, y, z;
    char v=',';
    cout<<"Podaj 3 števila:   ";
    cin>>x >> y  >> z;
    if( x>y && x>z){
        if(y>z){
            cout<< x << v << y << v << z;
        } else if(z>y){
            cout<< x << v << z << v << y;
        }
    }else if(y>x && y>z){
        if(x>z){
            cout<< y << v << x << v << z;
        } else if(z>x){
            cout<< y << v << z << v << x;
        }
    }else if(z>x && z>y){
        if(x>y){
            cout<< z << v << x << v << y;
        }else if(y>x){
            cout<<z << v << y << v << x;
        }
    }
    cout <<"    Hvala, da ste podali število!!";
    return 0;
}
